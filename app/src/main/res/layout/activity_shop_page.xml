<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liveness.stylish.ShopPageActivity"
    android:background="@color/bg_all">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_back_shop_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="22dp"
        android:padding="10dp"
        android:background="@drawable/bv_shopping"
        android:src="@drawable/ic_shopping" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/menu"
        android:layout_below="@id/ic_shopping">

        <RelativeLayout
            android:id="@+id/relativeLayout_shopPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/linear_gradient"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerV6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                tools:itemCount="8"
                tools:listitem="@layout/item_recycler_v6" />

            <TextView
                android:id="@+id/txt_size"
                style="@style/TextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerV6"
                android:layout_marginTop="16dp"
                android:text="Size: 7UK"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerV6_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_size"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                tools:itemCount="5"
                tools:listitem="@layout/item_recycler_v6_2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_r6"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerV6_2"
                android:layout_marginTop="10dp"
                android:text="NIke Sneakers"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_r6_2"
                style="@style/TextStyleItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6"
                android:layout_marginTop="10dp"
                android:text="Vision Alta Men’s Shoes Size (All Colours)"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_r6_3"
                style="@style/TextStyleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6_2"
                android:layout_marginTop="10dp"
                android:text="₹1500" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_r6_4"
                style="@style/TextStyleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6_3"
                android:layout_marginTop="10dp"
                android:text="₹2499"
                android:textColor="#BBBBBB" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_r6_5"
                style="@style/TextStyleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt_r6_4"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/txt_r6_4"
                android:text="40%Off"
                android:textColor="#FE735C" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerV2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6_4"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                tools:itemCount="5"
                tools:listitem="@layout/start" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_r6_6"
                style="@style/TextStyleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/recyclerV2_1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/recyclerV2_1"
                android:text="56890"
                android:textColor="#A4A9B3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_r6_7"
                style="@style/HintTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6_6"
                android:layout_marginTop="8dp"
                android:text="Product Details"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_r6_8"
                style="@style/TextStyleForgotPassword"
                android:layout_below="@+id/txt_r6_7"
                android:layout_marginTop="4dp"
                android:text="Perhaps the most iconic sneaker of all-time, this original Chicago? colorway is the cornerstone to any sneaker collection. Made famous in 1985 by Michael Jordan, the shoe has stood the test of time, becoming the most famous colorway of the Air Jordan 1. This 2015 release saw the ...More"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/edt_gps"
                style="@style/HintTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6_8"
                android:layout_marginTop="12dp"
                android:background="@drawable/bv_xam_white"
                android:drawableStart="@drawable/ic_gps"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="Nearest Store"
                android:textColor="@color/xam7"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/edt_vip"
                style="@style/HintTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6_8"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/edt_gps"
                android:background="@drawable/bv_xam_white"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="VIP"
                android:textColor="@color/xam7"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/edt_policy"
                style="@style/HintTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_r6_8"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/edt_vip"
                android:background="@drawable/bv_xam_white"
                android:drawableStart="@drawable/ic_return_policy"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="Return policy"
                android:textColor="@color/xam7"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_go_to_cart"
                style="@style/HintTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_gps"
                android:layout_marginTop="12dp"
                android:backgroundTint="#3F92FF"
                android:paddingStart="50dp"
                android:text="Go to cart"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_go_to_cart"
                android:layout_alignBottom="@+id/btn_go_to_cart"
                android:background="@drawable/bv_blue_elip"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_shopping_white" />

            <Button
                android:id="@+id/btn_by_now"
                style="@style/HintTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_gps"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/btn_go_to_cart"
                android:layout_alignBottom="@+id/btn_go_to_cart"
                android:backgroundTint="#71F9A9"
                android:paddingStart="50dp"
                android:text="Buy Now"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_by_now"
                android:layout_alignBottom="@+id/btn_by_now"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/btn_go_to_cart"
                android:background="@drawable/bv_green_elip"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_click" />

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_go_to_cart"
                android:layout_marginTop="12dp"
                android:background="@drawable/bv_pink"
                android:backgroundTint="#FFCCD5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/delivery"
                    style="@style/TextStyle"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="11dp"
                    android:text="Delivery in"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle"
                    android:layout_below="@id/delivery"
                    android:layout_alignStart="@id/delivery"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="11dp"
                    android:text="1 within Hour"
                    android:textSize="21sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/view_similar"
                style="@style/TextStyleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout4"
                android:layout_marginTop="16dp"
                android:background="@drawable/bv_xam_white"
                android:drawableStart="@drawable/ic_eye_2"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/add_to_compare"
                android:layout_alignParentStart="true"
                android:text="View Similar"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/add_to_compare"
                style="@style/TextStyleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout4"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/view_similar"
                android:layout_marginTop="16dp"
                android:background="@drawable/bv_xam_white"
                android:drawableStart="@drawable/ic_compare"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="Add to Compare"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_Similar_To"
                style="@style/TextStyle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_similar"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:text="Similar To" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_282"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_Similar_To"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="282+ Iteams" />

            <TextView
                style="@style/TextStyleNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_filter"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/edt_filter"
                android:background="@drawable/bv_xam_white"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="Sort"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_c3" />

            <TextView
                android:id="@+id/edt_filter"
                style="@style/TextStyleNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_282"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bv_xam_white"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="Filter"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_c4" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerV7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                android:layout_marginTop="18dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                tools:itemCount="8"
                tools:listitem="@layout/item_recycler_v7"
                android:layout_below="@+id/txt_282"/>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_all"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav" />


</RelativeLayout>