<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/bv_xam_white_2"
    tools:ignore="SmallSp"
    android:layout_marginBottom="12dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_checkout_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image_checkout_re"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_womenCasual"
        style="@style/TextStyle"
        android:textSize="14sp"
        android:text="Womenâ€™s Casual Wear"
        android:layout_toEndOf="@+id/image_checkout_r"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_variations"
        style="@style/TextStyleEditText"
        android:textColor="@color/black"
        android:text="Variations : "
        android:layout_below="@id/txt_womenCasual"
        android:layout_alignStart="@id/txt_womenCasual"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_womenCasual"
        android:layout_alignBottom="@id/txt_variations"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@id/txt_variations"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_black"
            style="@style/TextStyleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/bv_xam_white"
            android:gravity="center"
            android:padding="3dp"
            android:text="Black"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_red"
            style="@style/TextStyleEditText"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/bv_xam_white"
            android:gravity="center"
            android:padding="3dp"
            android:text="Red"
            android:textSize="10sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_numberStar"
       style="@style/TextStyleEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8"
        android:layout_below="@+id/txt_variations"
        android:layout_alignStart="@+id/txt_variations"
        android:layout_marginTop="7dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_start_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:spanCount="1"
        tools:itemCount="5"
        tools:listitem="@layout/start"
        android:layout_alignBottom="@+id/txt_numberStar"
        android:layout_toEndOf="@+id/txt_numberStar"
        android:layout_marginStart="5dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_money"
        style="@style/TextStyle"
        android:textSize="16sp"
        android:text="$ 34.00"
        android:layout_below="@id/recycler_start_checkout"
        android:layout_alignStart="@id/txt_variations"
        android:background="@drawable/bv_xam_white_2"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_sell"
        style="@style/TextStyleEditText"
        android:textSize="8sp"
        android:textColor="@color/red"
        android:text="upto 33% off "
        android:layout_alignTop="@+id/txt_money"
        android:layout_toEndOf="@id/txt_money"
        android:layout_marginStart="10dp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_no_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyleEditText"
        android:textColor="#A7A7A7"
        android:text="$ 64.00 "
        android:layout_below="@+id/txt_sell"
        android:layout_toEndOf="@id/txt_money"
        android:layout_marginStart="10dp" />
    <View
        android:id="@+id/line_sell"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_sell"
        android:layout_alignStart="@id/txt_no_sell"
        android:layout_alignEnd="@id/txt_no_sell"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_line" />
    <View
        android:id="@+id/line_checkout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/image_checkout_r"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_line" />
    <TextView
        android:id="@+id/txt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyleEditText"
        android:text="Total Order (1)   :"
        android:layout_below="@id/line_checkout"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/money_total"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:text="$ 34.00"
        android:layout_alignBottom="@id/txt_total"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>