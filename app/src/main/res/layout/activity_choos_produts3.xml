<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:background="@color/white">
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt1"
      style="@style/TextStyle"
      android:text="3"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="1dp"
      android:layout_marginStart="17dp"/>
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt3"
      style="@style/TextStyle"
      android:text="/3"
      android:textColor="@color/quickly"
      android:layout_toEndOf="@+id/txt1"
      android:layout_marginTop="1dp" />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txtSkip3"
      android:layout_width="wrap_content"
      android:layout_height="22dp"
      style="@style/TextStyle"
      android:text="Skip"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="1dp"
      android:layout_marginEnd="17dp"/>
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_above="@id/container3"
      android:layout_below="@+id/txtSkip3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/image_3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          app:srcCompat="@drawable/image_3" />

      <TextView
          android:id="@+id/txtGetYourOrder"
          style="@style/TextStyle1"
          android:layout_gravity="center_horizontal"
          android:text="@string/get_your_order"
          android:layout_marginTop="15dp"/>

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/txtBottomChoosePr"
          style="@style/TextStyle2"
          android:text="@string/txt_bottom_choose"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="15dp"
          />


    </LinearLayout>
  </androidx.core.widget.NestedScrollView>


  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/container3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:layout_marginBottom="25dp"
      android:backgroundTint="@color/white"
      android:gravity="center"
      app:srcCompat="@drawable/ic_circle_3"/>

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/btnNext3"
      style="@style/TextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:text="@string/next"
      android:textAllCaps="false"
      android:textColor="@color/red"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="20dp"
      android:layout_marginEnd="17dp"/>
  <androidx.appcompat.widget.AppCompatTextView
      style="@style/TextStyle"
      android:id="@+id/prev2"
      android:text="@string/prev"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="20dp"
      android:layout_marginStart="17dp"
      android:textColor="@color/xam6"
      />
</RelativeLayout>